- @page_title = "Dialects"
= sub_nav do
  = back_link("Settings", slice_url(:settings))
  = nav_link('New', slice_url(:gluttonberg, :new_dialect))

- if @dialects.empty?
  %p.empty No dialects available
- else
  %table{:cellpadding => 0, :cellspacing => 0, :summary => "List of Dialects"}
    %thead
      %tr
        %th Dialect
        %th.controls Controls
    %tbody
      - i = 0
      - for dialect in @dialects
        - i += 1
        %tr{ :class => "#{i % 2 == 0? "even" : ""}"}
          %td= "#{dialect.name} (#{dialect.code})"
          %td.controls
            %ul
              %li= link_to('Edit', slice_url(:gluttonberg, :edit_dialect,  dialect))
              %li= link_to("Delete", slice_url(:gluttonberg, :delete_dialect, dialect))
