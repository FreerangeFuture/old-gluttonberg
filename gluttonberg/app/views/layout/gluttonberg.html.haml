!!! Strict
%html
  %head
    %title Administration
    = css_include_tag :admin
    = js_include_tag "jquery-1.2.6.min.js", "application.js"
  %body
    %div#sidebar
      %h1 Gluttonberg
      %ul#navigation
        %li.current= link_to("Content", slice_url(:content))
        %li= link_to("Asset Library", slice_url(:library))
        %li= link_to("Settings", slice_url(:settings))
      %p
        Logged in as
        %br/
        %strong Luke Sutton
        %a logout
    
    %div#wrapper
      %h1#pageTitle= @page_title || "No title set"
      = catch_content(:for_layout)
