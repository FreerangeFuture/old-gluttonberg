/%h2.assetList Collections

%div#tabs
  %ul
    %li
      %a{ :href => "#tabs-collection"} Collection
    %li
      %a{ :href => "#tabs-browse"} Browse

%div#tabs-collection
  - unless @collections.empty?
    %ul.assetList
      - for collection in @collections
        %li
          %a{:href => slice_url(:collection, collection), :class => "collection"}
            %h3= collection.name
            / %p nil items

%div#tabs-browse
  /%h2.assetList Browse
  %ul.assetList
    %li
      %a{:href => slice_url(:asset_category, "all"), :class => "browseAll"}
        %h3 All
        / %p nil items
    - @categories.each do |category|
      %li
        %a{:href => slice_url(:asset_category, category.name), :class => "browse#{category.name.pluralize.capitalize}"}
          %h3= category.name.pluralize.capitalize
          / %p nil items