%tr{:id => "node-#{page.id}", :class => "#{page.parent_id ? 'child-of-node-' + page.parent_id.to_s : ''}"}
  %td
    %span{:class => "drag-node #{page.home ? "home" : "page"}"}
      = page.home ? "#{page.name} (Home page)" : page.name
  %td.published= "Yes"
  %td.behaviour= page.behaviour.to_s.capitalize
  %td.controls
    %ul
      %li= link_to 'Details', slice_url(:page, page)
      %li= link_to 'Settings', slice_url(:edit_page, page)
      %li= link_to 'Delete', slice_url(:delete_page, page)