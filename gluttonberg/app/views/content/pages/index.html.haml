- @page_title = "Pages"
= sub_nav do
  = back_link("Content", slice_url(:content))
  = nav_link('New', slice_url(:new_page))
  
- if @pages.empty?
  %p.empty No Pages
- else
  %table{:cellpadding => 0, :cellspacing => 0}
    %thead
      %tr
        %th Page
        %th.published Published
        %th.behaviour Behaviour
        %th.controls Controls
    %tbody
      = page_table_rows(@pages)