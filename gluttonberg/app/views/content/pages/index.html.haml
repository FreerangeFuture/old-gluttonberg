- @page_title = "Pages"
= sub_nav do
  = back_link("Content", slice_url(:content))
  = nav_link('New', slice_url(:new_page))
    
- if @pages.empty?
  %p.empty No Pages
- else
  %table{:id => 'pages_table', :class => drag_tree_table_class, :cellpadding => 0, :cellspacing => 0, :rel => drag_tree_slice_url, :summary => "Pages"}
    %thead
      %tr
        %th Page
        %th.published Published
        %th.behaviour Description
        %th.controls Controls
    %tbody
      = page_table_rows(@pages)