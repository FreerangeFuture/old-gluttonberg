- id_of_text_area = "gluttonberg::page_localization[contents][#{content.association_name}][#{content.id}][text]"
%script{:type => "text/javascript", :charset => "utf-8"}
  = enable_tinymce_on(id_of_text_area)

%label= content.section_label
= find_and_preserve do
  = text_area(content.text, :name => id_of_text_area, :class => "large tall")