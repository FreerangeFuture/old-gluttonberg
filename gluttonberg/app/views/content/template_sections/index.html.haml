- @page_title = "Edit sections for “#{@template.name}” template"
- if @sections.empty?
  %p.empty No Sections Yet
- else
  %table{:cellpadding => 0, :cellspacing => 0}
    %thead
      %tr
        %th Label
        %th Type
        %th.controls Controls
    %tbody
      - for section in @sections
        %tr
          %td= section.label
          %td= section.type
          %td
            %ul
              %li= link_to("Edit", slice_url(:edit_template_section, :id => section, :template_id => @template))
              %li= link_to("Delete", slice_url(:delete_template_section, :id => section, :template_id => @template))
              
%p.newLink= link_to("New", slice_url(:new_template_section, :template_id => @template))