- @page_title = "Layouts"
= sub_nav do
  = back_link("Content", slice_url(:content))
  = nav_link("New", slice_url(:new_layout))
  
- if @layouts.empty?
  %p.empty No layouts available
- else
  %table{:cellpadding => 0, :cellspacing => 0}
    %thead
      %tr
        %th Name
        %th.controls Controls
    %tbody
      - for layout in @layouts
        %tr
          %td= layout.name
          %td.controls
            %ul
              %li= link_to("Delete", slice_url(:delete_layout, layout))
              %li= link_to("Edit", slice_url(:edit_layout, layout))
  