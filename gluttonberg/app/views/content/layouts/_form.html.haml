= form_for(@layout, :action => action) do
  = error_messages_for(@layout)
  %div.fieldset
    = text_field(:name, :label => "Name", :class => "wide")
    = text_field(:filename, :label => "File Name", :class => "wide")
    
  %p.controls
    = submit("Save")
    or
    = link_to("<strong>Cancel</strong>", slice_url(:layouts))