- @page_title = "Locales"

- if @locales.empty?
  %p.empty No locales
- else
  %table{:cellspacing => 0, :cellpadding => 0}
    %thead
      %tr
        %th Locale
        %th Dialects
        %th.controls Controls
    %tbody
      - for locale in @locales
        %tr
          %td= locale.name
          %td= locale.dialects.collect {|d| d.name_and_code}.join(", ")
          %td.controls
            %ul
              %li= link_to('Edit', slice_url(:edit_locale,  locale))
              %li= link_to('Delete', slice_url(:delete_locale, locale))

%p.newLink= link_to('New', slice_url(:new_locale))