!!! Strict
%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}
  %head
    %title Gluttonberg
    %link{:href => gluttonberg_public_path_for(:stylesheet, 'admin.css'), :type => "text/css", :charset => "utf-8", :rel => "stylesheet"}/
  %body{:id => "delete"}
    = form(:action => @options[:action], :method => "delete") do
      %h1= @options[:title]
      %p.message= @options[:message]
      %p.warning= @options[:warning] unless @options[:warning].blank?
      
      %p.controls
        - unless @do_not_delete
          = submit("Delete")
          or 
          = link_to("<strong>Cancel</strong>", @options[:return_url])
        - else
          = link_to("<strong>Ok</strong>", @options[:return_url])