!!! Strict
%html
  %head
    %title Administration
    = css_include_tag :admin
    = js_include_tag "jquery-1.2.6.min.js", "admin/application.js"
  %body
    %div#sidebar
      %h1 Gluttonberg
      %ul#navigation
        %li.current= link_to("Content", url(:admin_content))
        %li= link_to("Assets", url(:admin_assets))
        %li= link_to("Users", url(:admin_users))
        %li= link_to("Settings", url(:admin_settings))
      %p
        Logged in as
        %br/
        %strong Luke Sutton
        %a logout
    
    %div#wrapper
      %h1#pageTitle= @page_title || "No title set"
      = catch_content(:for_layout)
    